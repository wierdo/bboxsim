<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

   
<LinearLayout 
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">   
    
     
  <TextView
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp" 
        android:text="speed"/>
        
         <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textSize="15sp" 
         android:text="distance" />
     
     <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   
     
        android:text="@string/hello_world" />
    
    
    <Button
        android:id="@+id/button_sim"
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start simulation..."/>
     <Button
        android:id="@+id/button_tre"
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SetTresholds"/>
     
         <Button
        android:id="@+id/speakButton"
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speech ON"/>
</LinearLayout>
    
<LinearLayout android:id="@+id/graph"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:layout_height="wrap_content"/>
    
    <LinearLayout android:id="@+id/graph1"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:layout_height="wrap_content"/>
    
    <LinearLayout android:id="@+id/graph2"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:layout_height="wrap_content"/>
    

    
    
</LinearLayout>
